{% extends 'base.html.twig' %}

{% block title %}Liste associations{% endblock %}

{% block body %}
    <h1>Liste des associations</h1>

    <table class="table table-striped table-bordered">
        <thead class="tableau">
            <tr>
                <th>Nom</th>
                <th>Département</th>
                <th>Région</th>
                <th>Statut</th>
                <th>Roles</th>
                <th>Que voulez-vous faire?</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.name }}</td>
                <td>{{ user.department }}</td>
                <td>{{ user.region }}</td>
                <td>{{ user.status ? 'Yes' : 'No' }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td>
                    <a href="{{ path('app_back_user_show_asso', {'id': user.id}) }}" class="btn btn-profil">Voir</a>
                    <a href="{{ path('app_back_asso_edit', {'id': user.id}) }}" class="btn btn-edit">Editer</a>
                </td>
            </tr>
        {% else %}
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_back_asso_new') }}" class="btn btn-profil" style="margin-bottom:20px">Ajouter</a>
{% endblock %}
