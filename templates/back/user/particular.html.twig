{% extends 'base.html.twig' %}

{% block title %}Liste particuliers{% endblock %}

{% block body %}
    <h1>Liste des Particuliers</h1>

    <table class="table table-striped table-bordered">
        <thead class="tableau">
            <tr>
                <th>Prénom</th>
                <th>Nom de famille</th>
                <th>Département</th>
                <th>Statut</th>
                <th>Roles</th>
                <th>Que voulez-vous faire?</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.firstname }}</td>
                <td>{{ user.lastname }}</td>
                <td>{{ user.department }}</td>
                <td>{{ user.status ? 'Yes' : 'No' }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td>
                    <a href="{{ path('app_back_user_show_part', {'id': user.id}) }}" class="btn btn-profil">Voir</a>
                    <a href="{{ path('app_back_part_edit', {'id': user.id}) }}" class="btn btn-edit">Editer</a>
                </td>
            </tr>
        {% else %}
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_back_part_new') }}" class="btn btn-profil" style="margin-bottom:20px">Ajouter</a>
{% endblock %}