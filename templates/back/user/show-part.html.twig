{% extends 'base.html.twig' %}

{% block title %}Particulier{% endblock %}

{% block body %}

    <h1>{{ user.firstname}} {{ user.lastname }}</h1>

    <img src="{{ user.picture }}" class="picture"/>
    
    <table class="table table_show">
        <tbody>
            <tr>
                <th>Mail</th>
                <td>{{ user.mail }}</td>
            </tr>
            <tr>
                <th>Departement</th>
                <td>{{ user.department }}</td>
            </tr>
            <tr>
                <th>Numero de téléphone</th>
                <td>{{ user.phoneNumber }}</td>
            </tr>
            <tr>
                <th>Statut</th>
                <td>{{ user.status ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
        </tbody>
    </table>

    <div class = "button_show">

        <button class="btn btn-edit"><a href="{{ path('app_back_part_edit', {'id': user.id}) }}"> Editer</a></button>

        <button class="btn btn-profil"><a href="{{ path('app_back_particular') }}"> Retour à la liste</a></button>

        {{ include('back/user/_delete_form-part.html.twig') }}
    </div>
{% endblock %}
